<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_9" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

<!-- 用户注册 -->
<servlet>
    <servlet-name>RegServlet</servlet-name>
    <servlet-class>bookstore.servlet.RegServlet</servlet-class>
</servlet>
<!-- 用户登录 -->
<servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>bookstore.servlet.LoginServlet</servlet-class>
</servlet>
<!-- 用户退出 -->
<servlet>
    <servlet-name>ExitServlet</servlet-name>
    <servlet-class>bookstore.servlet.ExitServlet</servlet-class>
</servlet>
<!-- book list-->
<servlet>
    <servlet-name>BookListServlet</servlet-name>
    <servlet-class>bookstore.servlet.BookListServlet</servlet-class>
</servlet>
<!-- Servlet映射 -->
<servlet-mapping>
    <servlet-name>RegServlet</servlet-name>
    <url-pattern>/RegServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>ExitServlet</servlet-name>
    <url-pattern>/ExitServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>BookListServlet</servlet-name>
    <url-pattern>/BookListServlet</url-pattern>
</servlet-mapping>

<!-- 主页 -->
<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
</welcome-file-list>

</web-app>